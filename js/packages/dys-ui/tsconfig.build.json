{
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "**/__tests__/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
